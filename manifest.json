{
  "manifest_version": 3,
  "name": "Secure TOTP Manager",
  "version": "1.0",
  "description": "Gerenciador seguro de tokens TOTP com sincronização",
  "permissions": [
      "storage",
      "activeTab",
      "clipboardWrite"
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
      }
  },
  "background": {
      "service_worker": "background.js",
      "type": "module"
  },
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  }
}